Sample_set2 = ['10', 'sword', 'bassfish', '3.14', '44', 'logic']

'returns how long the list is'
how_long = len(Sample_set2)
print(how_long)



random_numbers_list = [2, 12, 1.01,-4, 12, 222,] 

'min, max '
print(min(random_numbers_list))
print(max(random_numbers_list))


'returns how many items are in the list'
how_many_items = len(random_numbers_list)
print("we have " + str(how_many_items) + " items in the list")



bax = print([len(i) for i in Sample_set2])
print(bax)

def Sample_set2(words):
  ctr = 0

  for word in words:
    if len(word) > 1 and word[0] == word[-1]:
      ctr += 1
  return ctr

print(Sample_set2(['10', 'sword', 'bastinb', 'appleapllea', 'bassfish', '3.14', '44', 'logic']))


